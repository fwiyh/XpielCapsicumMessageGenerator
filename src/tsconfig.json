{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "ES2020",
      "dom",
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
  },
  "compileOnSave": true,
  // "exclude": [
  //   "node_modules", 
  //   "public",
  //   "src/**.config.ts",
  // ],
}